{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}

   <div class="container">
   
    {% if error %}

        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>

    {% endif %}

        <form action="{{ path('login') }}" method="post">
        
            <div class="form-group">
                <lable for="username" >Nom d'utilisateur</lable>
                <input type="text" id="username" name="_username" class="form_control" value="{{ last_username }}">
            </div>


            <div class="form-group">
                <lable for="password" >Mot de passe</lable>
                <input type="password" id="password" name="_password" class="form_control">
            </div>

            <button type="submit" class="btn btn-primary">Se connecter</button>

        </form>
   
   </div>
{% endblock %}